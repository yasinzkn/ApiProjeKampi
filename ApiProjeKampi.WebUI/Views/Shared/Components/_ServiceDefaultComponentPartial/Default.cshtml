@model List<ApiProjeKampi.WebUI.Dtos.ServiceDtos.ResultServiceDtos>

<section id="why-us" class="why-us section light-background">

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="why-box">
                    <h3>Neden Yummy</h3>
                    <p>
                        Yummy'de yemek yemek sadece karın doyurmak değil, aynı zamanda keyifli bir deneyimdir.
                        Doğal ve taze ürünlerle hazırlanan tariflerimiz, hem sağlıklı hem de lezzetlidir. Farkı ilk lokmada anlayacaksınız. Misafirlerimiz için en iyisini sunmayı ilke edindik.
                    </p>
                    <div class="text-center">
                        <a href="#contact" class="more-btn"><span>Rezervasyon Yapın</span> <i class="bi bi-chevron-right"></i></a>
                    </div>
                </div>
            </div><!-- End Why Box -->

            <div class="col-lg-8 d-flex align-items-stretch">
                <div class="row gy-4" data-aos="fade-up" data-aos-delay="200">

                    @foreach (var item in Model)
                    {
                        <div class="col-xl-4">
                            <div class="icon-box d-flex flex-column justify-content-center align-items-center">
                                <i class="@item.IconUrl"></i>
                                <h4>@item.Title</h4>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    }

                </div>
            </div>

        </div>

    </div>

</section>