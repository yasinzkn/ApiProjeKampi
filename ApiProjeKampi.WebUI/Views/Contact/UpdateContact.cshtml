@model GetContactByIdDto

@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>İletişim Bilgisi Güncelleme Sayfası</h4>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <input type="hidden" asp-for="ContactId" />
                            <label>Adres</label>
                            <input type="text" asp-for="Address" class="form-control" />
                            <br />
                            <label>Telefon</label>
                            <input type="text" asp-for="Phone" class="form-control" />
                            <br />
                            <label>Email Adresi</label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <br />
                            <label>Açık Saatler</label>
                            <input type="text" asp-for="OpenHours" class="form-control" />
                            <br />
                            <label>Harita Lokasyon Bilgisi</label>
                            <input type="text" asp-for="MapLocation" class="form-control" />
                            <br />
                            <button class="btn btn-success">İletişim Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
